<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.novelsite.mapper.CommentMapper">

    <resultMap id="CommentResultMap" type="Comment">
        <id column="id" property="id"/>
        <result column="novel_id" property="novelId"/>
        <result column="reader_id" property="readerId"/>
        <result column="content" property="content"/>
        <result column="rating" property="rating"/>
        <result column="create_time" property="createTime"/>
        <result column="reader_name" property="readerName"/>
        <result column="novel_name" property="novelName"/>
    </resultMap>

    <sql id="selectWithJoin">
        SELECT c.*, r.nickname as reader_name, n.name as novel_name
        FROM comment c
        LEFT JOIN reader r ON c.reader_id = r.id
        LEFT JOIN novel n ON c.novel_id = n.id
    </sql>

    <select id="findById" resultMap="CommentResultMap">
        <include refid="selectWithJoin"/>
        WHERE c.id = #{id}
    </select>

    <select id="findByNovelId" resultMap="CommentResultMap">
        <include refid="selectWithJoin"/>
        WHERE c.novel_id = #{novelId}
        ORDER BY c.create_time DESC
    </select>

    <select id="findByReaderId" resultMap="CommentResultMap">
        <include refid="selectWithJoin"/>
        WHERE c.reader_id = #{readerId}
        ORDER BY c.create_time DESC
    </select>

    <insert id="insert">
        <selectKey keyProperty="id" resultType="long" order="AFTER">
            SELECT last_insert_rowid()
        </selectKey>
        INSERT INTO comment (novel_id, reader_id, content, rating, create_time)
        VALUES (#{novelId}, #{readerId}, #{content}, #{rating}, datetime('now'))
    </insert>

    <delete id="deleteById">
        DELETE FROM comment WHERE id = #{id}
    </delete>

    <delete id="deleteByNovelId">
        DELETE FROM comment WHERE novel_id = #{novelId}
    </delete>

</mapper>
