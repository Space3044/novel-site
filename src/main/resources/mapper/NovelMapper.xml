<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.novelsite.mapper.NovelMapper">

    <resultMap id="NovelResultMap" type="Novel">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="author_id" property="authorId"/>
        <result column="category_id" property="categoryId"/>
        <result column="cover" property="cover"/>
        <result column="description" property="description"/>
        <result column="status" property="status"/>
        <result column="chapter_count" property="chapterCount"/>
        <result column="page_count" property="pageCount"/>
        <result column="vote_count" property="voteCount"/>
        <result column="word_count" property="wordCount"/>
        <result column="view_count" property="viewCount"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="author_name" property="authorName"/>
        <result column="category_name" property="categoryName"/>
    </resultMap>

    <sql id="selectWithJoin">
        SELECT n.*, a.name as author_name, c.name as category_name
        FROM novel n
        LEFT JOIN author a ON n.author_id = a.id
        LEFT JOIN category c ON n.category_id = c.id
    </sql>

    <select id="findById" resultMap="NovelResultMap">
        <include refid="selectWithJoin"/>
        WHERE n.id = #{id}
    </select>

    <select id="findAll" resultMap="NovelResultMap">
        <include refid="selectWithJoin"/>
        ORDER BY n.update_time DESC
    </select>

    <select id="findByAuthorId" resultMap="NovelResultMap">
        <include refid="selectWithJoin"/>
        WHERE n.author_id = #{authorId}
        ORDER BY n.update_time DESC
    </select>

    <select id="findByCategoryId" resultMap="NovelResultMap">
        <include refid="selectWithJoin"/>
        WHERE n.category_id = #{categoryId}
        ORDER BY n.update_time DESC
    </select>

    <select id="findByStatus" resultMap="NovelResultMap">
        <include refid="selectWithJoin"/>
        WHERE n.status = #{status}
        ORDER BY n.update_time DESC
    </select>

    <select id="search" resultMap="NovelResultMap">
        <include refid="selectWithJoin"/>
        WHERE n.name LIKE '%' || #{keyword} || '%'
           OR a.name LIKE '%' || #{keyword} || '%'
        ORDER BY n.update_time DESC
    </select>

    <select id="findTopByViewCount" resultMap="NovelResultMap">
        <include refid="selectWithJoin"/>
        ORDER BY n.view_count DESC
        LIMIT #{limit}
    </select>

    <select id="findTopByVoteCount" resultMap="NovelResultMap">
        <include refid="selectWithJoin"/>
        ORDER BY n.vote_count DESC
        LIMIT #{limit}
    </select>

    <select id="findLatest" resultMap="NovelResultMap">
        <include refid="selectWithJoin"/>
        ORDER BY n.update_time DESC
        LIMIT #{limit}
    </select>

    <insert id="insert">
        <selectKey keyProperty="id" resultType="long" order="AFTER">
            SELECT last_insert_rowid()
        </selectKey>
        INSERT INTO novel (name, author_id, category_id, cover, description, status, chapter_count, page_count, vote_count, word_count, view_count, create_time, update_time)
        VALUES (#{name}, #{authorId}, #{categoryId}, #{cover}, #{description}, #{status}, 0, 0, 0, 0, 0, datetime('now'), datetime('now'))
    </insert>

    <update id="update">
        UPDATE novel SET
            name = #{name},
            category_id = #{categoryId},
            cover = #{cover},
            description = #{description},
            status = #{status},
            update_time = datetime('now')
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM novel WHERE id = #{id}
    </delete>

    <update id="incrementViewCount">
        UPDATE novel SET view_count = view_count + 1 WHERE id = #{id}
    </update>

    <update id="incrementVoteCount">
        UPDATE novel SET vote_count = vote_count + 1 WHERE id = #{id}
    </update>

    <update id="updateChapterCount">
        UPDATE novel SET chapter_count = #{count}, update_time = datetime('now') WHERE id = #{id}
    </update>

    <update id="updateWordCount">
        UPDATE novel SET word_count = #{count}, update_time = datetime('now') WHERE id = #{id}
    </update>

</mapper>
